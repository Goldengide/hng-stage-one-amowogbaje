{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src" // Assuming your source files are in a 'src' directory
  },
  "include": [
    "src/**/*.ts",
    "index.ts" // Include your main entry point file
  ],
  "exclude": [
    "node_modules"
  ]
}
